#!/bin/bash
# /usr/bin/theme-switch

# source /usr/lib/theme-switch/constants
# source /usr/lib/theme-switch/init
# source /usr/lib/theme-switch/core

source ../lib/theme-switch/constants
source ../lib/theme-switch/init
source ../lib/theme-switch/core

case "$1" in
-v | --version)
	showVersion
	;;
-t | --toggle)
	toggleTheme
	;;
-s | --set)
	if [ -z "$2" ] || [ -z "$3" ] || [ -z "$4" ]; then
		echo "Usage: $0 -s <light|dark> --<vim|nvim|kitty> <colorscheme>"
		exit 1
	fi
	setTemplate "$2" "$3" "$4"
	;;
-d | --detail)
	showDetails
	;;
# NOTE: just added the following
-l | --list-themes)
	if [ -z "$2" ]; then
		echo "Usage: $0 -l <vim|nvim|kitty>"
		exit 1
	fi
	listThemes "$2"
	;;
-o | --opacity)
	setOpacity "$2" "$3"
	;;
-r | --reload)
	reloadTheme
	;;
*)
	printHelp
	;;
esac
